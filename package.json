{
  "name": "digitalmarketplace-admin-frontend",
  "description": "Front end application for the Digital Marketplace admin",
  "version": "0.0.1",
  "private": true,
  "engine": "node >= 4.2",
  "dependencies": {
    "bower": "1.7.1",
    "del": "1.1.1",
    "govuk_frontend_toolkit": "5.0.3",
    "gulp": "3.8.7",
    "gulp-filelog" : "0.4.1",
    "gulp-include": "1.1.1",
    "gulp-sass": "2.0.4",
    "gulp-shell": "0.2.9",
    "gulp-uglifyjs": "0.6.0",
    "colors": "1.1.2"
  },
  "scripts": {
    "frontend-install": "./node_modules/bower/bin/bower install",
    "frontend-build:development": "./node_modules/gulp/bin/gulp.js build:development",
    "frontend-build:production": "./node_modules/gulp/bin/gulp.js build:production",
    "frontend-build:watch": "./node_modules/gulp/bin/gulp.js watch",
    "postinstall": "npm run frontend-install"
  }
}
